<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rooms" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryVariant">@color/rojoSecundario</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarillo</item>
        <item name="colorSecondaryVariant">@color/amarilloSecundario</item>
        <item name="colorOnSecondary">@color/negroFondo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/negroFondo</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/negroFondo</item>
        <item name="android:textColor">@color/blancoTexto</item>
        <item name="android:navigationBarColor">@color/negroMenu</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Rooms.NoActionBar" parent="Theme.Rooms">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/amarilloTranslucido</item>
    </style>
</resources>