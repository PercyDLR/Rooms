<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/negroFondo"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/rvEncabezado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encabezado"
                    android:textColor="@color/blancoTexto"
                    android:textSize="24dp"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/rvCuerpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuerpo"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/amarillo"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/rvBoton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/negroFondo"
                android:drawableTint="@color/amarillo"
                app:tint="@color/rojo"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>